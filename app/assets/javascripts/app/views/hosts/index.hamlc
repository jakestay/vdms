%h2 Manage Hosts
%ul#actions
  %li
    %a.action{'data-type' => 'new'} New
%table.records
  %thead
    %tr
      %th{scope: 'col'} Name
      %th{scope: 'col'} Email
      %th{scope: 'col'} Actions
  %tbody
    - for host in @hosts
      %tr.item{'data-id' => host.id}
        %td= host.person.name
        %td= host.person.email
        %td
          %ul
            %li
              %a.action{'data-type' => 'edit'} Edit
            %li
              %a.action{'data-type' => 'destroy'} Remove
#confirm_delete.dialog{title: 'Remove Host Field?'}
  %p Are you sure you want to permanently remove this host field?
