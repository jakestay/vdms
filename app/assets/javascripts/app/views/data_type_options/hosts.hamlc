%fieldset
  %h3 Options
  %ul
    %li.field.required
      %label Include Comment Box
      %ul
        %li
          %input{type: 'radio', id: "#{@prefix}_options_comment_0", name: 'options.comment', value: 'yes', checked: 'checked'}
          %label{for: "#{@prefix}_options_comment_0"} Yes
        %li
          %input{type: 'radio', id: "#{@prefix}_options_comment_1", name: 'options.comment', value: 'no'}
          %label{for: "#{@prefix}_options_comment_1"} No
    %li.field.required
      %label Visible to Hosts/Visitors
      %ul
        %li
          %input{type: 'radio', id: "#{@prefix}_options_visible_0", name: 'options.visible', value: 'yes', checked: 'checked'}
          %label{for: "#{@prefix}_options_visible_0"} Yes, show hosts/visitors the question
        %li
          %input{type: 'radio', id: "#{@prefix}_options_visible_1", name: 'options.visible', value: 'no'}
          %label{for: "#{@prefix}_options_visible_1"} No, internal use only
