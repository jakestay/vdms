- content_for :title, 'Print Admit Schedules'
- @admits.each do |admit|
  %h3!= admit.full_name
  %table{:style => @one_per_page ? 'page-break-after: always;' : '', :class => 'schedule'}
    %thead
      %tr
        %th{:scope => 'col'} Time
        %th{:scope => 'col'} Faculty Name
        %th{:scope => 'col'} Room
    %tbody
      - admit.available_times.each do |available_time|
        - meeting = admit.meeting_at_time(available_time.begin)
        %tr{:class => (available_time.available ? nil : 'unavailable')}
          %td!= available_time.begin.strftime('%I:%M%p')
          - unless meeting.nil?
            %td!= meeting.faculty.full_name
            %td!= meeting.room
          - else
            %td
            %td
