- content_for :title, t('.title')
%table#master.schedule
  %thead
    %tr
      %th
        Time
        - @hosts.each do |host|
          %th.time!= link_to host.name, (@current_user.class == Staff ? tweak_faculty_meetings_path(faculty) : faculty_meetings_path(faculty))
      %tbody
        - @settings.time_slots.each do |time_slot|
          %tr
            %
            - time_slot.host_availabilities.each do |host_availability|
              %td.meeting
                - host_availability.meetings.by_visitor.each do |meeting|
                  %span
                    != link_to meeting.visitor.name, admit_meetings_path(meeting.visitor), {:title => room_if_not_default(meeting)}
                  %br
