!!!
%html
  %head
    %title= content_for?(:title) ? yield(:title) : 'MeetingLibs'
    = stylesheet_link_tag 'application'
    = stylesheet_link_tag 'print', :media => 'print'
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Open+Sans'
    = csrf_meta_tag
  %body
    #header
      #secondary_navigation
        %ul#breadcrumbs
        %ul#account_management
          %li= link_to 'Contact Info'
          %li= link_to 'Sign Out'
      #title
        %h1= link_to 'MeetingLibs', root_path
        - unless @event.nil? or @event.new_record?
          %span for #{@event.name}
      %ul#primary_navigation
        - is_administrator = @current_user.role == 'administrator'
        - is_facilitator = @current_user.role == 'facilitator'
        - if @event.nil? || @event.new_record?
          - if is_administrator
            %li= link_to t('people.index.short_title'), people_path
            %li= link_to t('events.index.short_title'), events_path
        - else
          - if is_administrator
            %li
              = link_to t('events.show.short_title'), event_path(@event)
              %ul
                %li= link_to t('events.edit.short_title'), edit_event_path(@event)
            %li
              = link_to t('hosts.index.short_title'), event_hosts_path(@event)
              %ul
                %li= link_to t('host_field_types.index.short_title'), event_host_field_types_path(@event)
            %li
              = link_to t('visitors.index.short_title'), event_visitors_path(@event)
              %ul
                %li= link_to t('visitor_field_types.index.short_title'), event_visitor_field_types_path(@event)
            %li
              = link_to 'Meetings', event_meetings_path(@event)
              %ul
                %li= link_to t('goals.index.short_title'), event_goals_path(@event)
                %li= link_to t('constraints.index.short_title'), event_constraints_path(@event)
          - elsif is_facilitator
            %li= link_to t('hosts.index.short_title'), event_hosts_path(@event)
            %li= link_to t('visitors.index.short_title'), event_visitors_path(@event)
            %li= link_to 'Meetings'
          - else
    #content
      - if content_for?(:title)
        %h2= yield :title
      - unless flash[:notice].nil?
        %p#notice= flash[:notice]
      - unless flash[:alert].nil?
        %p#alert= flash[:alert]
      != yield
    #footer
      %p By Vinson Chuong and Benson Ma, alumni of Prof. Armando Fox's software engineering course at UC Berkeley
    = javascript_include_tag 'http://maps.googleapis.com/maps/api/js?libraries=places&sensor=false'
    = javascript_include_tag 'application'
    != yield :javascript

