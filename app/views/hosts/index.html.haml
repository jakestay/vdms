- content_for :title, t('.title')
%table
  %thead
    %tr
      %th{:scope => 'col'}!= Person.human_attribute_name(:name)
      %th{:scope => 'col'}!= t('.actions')
  %tbody
    - @roles.each do |host|
      %tr
        %td= host.person.name
        %td
          %ul
            %li!= link_to t('hosts.edit.short_title'), edit_event_host_path(@event, host)
            %li!= link_to t('host_availabilities.edit_all.short_title'), edit_all_event_host_availabilities_path(@event, host)
            %li!= link_to t('host_rankings.edit_all.short_title'), edit_all_event_host_rankings_path(@event, host)
            %li!= link_to t('hosts.delete.short_title'), delete_event_host_path(@event, host)

