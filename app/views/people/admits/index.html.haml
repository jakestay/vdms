- content_for :title, t('.title')
%table
  %thead
    %tr
      %th{:scope => 'col'}!= Admit.human_attribute_name(:full_name)
      %th{:scope => 'col'}!= Admit.human_attribute_name(:email)
      %th{:scope => 'col'}!= Admit.human_attribute_name(:phone)
      %th{:scope => 'col'}!= t('.time_slots')
      %th{:scope => 'col'}!= t('.faculty_rankings')
      %th{:scope => 'col'}!= t('.actions')
  %tbody
    - @settings = Settings.instance
    - @admits.each do |admit|
      %tr
        %td= admit.full_name
        %td= admit.email
        %td= admit.phone
        %td= admit.availabilities.select {|t| t.available}.count
        %td= admit.rankings.count
        %td
          %ul
            %li!= link_to t('admits.edit.short_title'), edit_admit_path(admit)
            %li!= link_to t('visitor_availabilities.edit_all.short_title'), edit_all_admit_availabilities_path(admit)
            %li!= link_to t('visitor_rankings.edit_all.short_title'), edit_all_admit_rankings_path(admit)
            %li!= link_to t('meetings.for_admit.short_title'), admit_meetings_path(admit)
            %li!= link_to t('admits.delete.short_title'), delete_admit_path(admit)
