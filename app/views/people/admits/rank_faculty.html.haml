- content_for :title, t('.title')
- form_for @admit, :url => {:action => 'update'} do |admit_form|
  != admit_form.error_messages
  %fieldset
    %h3!= t('.faculty_rankings')
    %ol
      - admit_form.fields_for :faculty_rankings do |faculty_ranking_fields|
        %li
          %ul
            %li.field
              != faculty_ranking_fields.label :rank
              != faculty_ranking_fields.text_field :rank
            %li.field
              != faculty_ranking_fields.label :faculty_id
              != faculty_ranking_fields.select :faculty_id, [''] + @faculty.map {|f| ["#{f.first_name} #{f.last_name}", f.id]}
            %li.field
              != faculty_ranking_fields.check_box :_destroy
              != faculty_ranking_fields.label :_destroy, t('.remove')
    != hidden_field_tag :origin_action, @origin_action
    != hidden_field_tag :redirect_action, @redirect_action
    != admit_form.submit t('.submit')
