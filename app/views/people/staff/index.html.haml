%h2 View Staff
%h3 Navigation
%ul
  %li!= link_to 'Add Staff', new_staff_instance_path
  %li!= link_to 'Import Staff', upload_staff_path
%h3 Staff
%table
  %thead
    %tr
      %th{:scope => 'col'} LDAP ID
      %th{:scope => 'col'} First Name
      %th{:scope => 'col'} Last Name
      %th{:scope => 'col'} Email
      %th{:scope => 'col'}
      %th{:scope => 'col'}
  %tbody
    - @staff.each do |staff_instance|
      %tr
        %td= staff_instance.ldap_id
        %td= staff_instance.first_name
        %td= staff_instance.last_name
        %td= staff_instance.email
        %td!= link_to 'Update Staff', edit_staff_instance_path(staff_instance)
        %td!= link_to 'Remove Staff', delete_staff_instance_path(staff_instance)
